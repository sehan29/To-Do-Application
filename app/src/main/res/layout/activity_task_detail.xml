<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditTaskActivity"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="Task Trove"
        app:titleMarginStart="16dp">
    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textViewTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Task  Details"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textViewTaskTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Task Title"
                android:textSize="18sp"
                android:padding="12dp"
                android:background="@drawable/gray_strock"/>

            <TextView
                android:id="@+id/textViewTaskDescription2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Task Description"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewTaskDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Task Description"
                android:textSize="16sp"
                android:padding="12dp"
                android:background="@drawable/gray_strock"/>

            <TextView
                android:id="@+id/start_TimeTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Start Date - 2024:Novermber:26"
                android:textSize="16sp"
                android:padding="12dp"
                android:background="@drawable/gray_strock"/>

            <TextView
                android:id="@+id/end_TimeTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="End Date - 2024:Novermber:29"
                android:textSize="16sp"
                android:padding="12dp"
                android:background="@drawable/gray_strock"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonEditTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/gray_strock"
                android:backgroundTint="@color/buuton_edit"
                android:text="Edit Task"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonDeleteTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_strock"
                android:backgroundTint="@color/delete_btn"
                android:text="Delete Task"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>